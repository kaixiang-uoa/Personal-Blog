{
  "name": "blog-api",
  "version": "1.0.0",
  "type": "module",
  "description": "The back-end part of blog project.",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "seed": "node src/config/seedData.js",
    "build": "echo 'No build step required'",
    "start": "node src/server.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:api": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/tests/api",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "init-about": "node src/scripts/init-about-settings.js",
    "update-about-group": "node src/scripts/update-about-group.js",
    "update-banner-settings": "node src/scripts/update-banner-settings.js",
    "lint:comments": "node scripts/commentLinter.js",
    "fix:comments": "node scripts/fixComments.js",
    "translate:comments": "node scripts/commentChineseToEnglish.js",
    "db:ensure-indexes": "node src/scripts/ensureIndexes.js",
    "docs:copy": "node scripts/copy-docs.js",
    "docs:open": "open ../docs/README.md"
  },
  "author": "kaixiang",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "croner": "^9.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.2",
    "multer-s3": "^3.0.0",
    "nodemailer": "^6.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^8.56.0",
    "chai": "^4.5.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1"
  }
}
